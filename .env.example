# Application settings
APP_NAME=Koutoubi AI
APP_VERSION=1.0.0
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./koutoubi.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/koutoubi

# LLM Configuration
MODEL_PATH=models/mistral-7b-instruct-v0.1.Q4_K_M.gguf
LLAMA_CPP_PATH=llama.cpp/main
MODEL_TYPE=mistral

# Ollama Configuration (recommand√©)
USE_OLLAMA=true
OLLAMA_MODEL=mistral:7b-instruct
OLLAMA_BASE_URL=http://localhost:11434

# Model parameters
MODEL_N_CTX=2048
MODEL_N_BATCH=512
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.95
MODEL_TOP_K=40
MODEL_REPEAT_PENALTY=1.1

# Content paths
CONTENT_BASE_PATH=content
PDF_PATH=content/pdf
MD_PAGES_PATH=content/md_pages

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/koutoubi.log

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Cache settings (optional)
ENABLE_CACHE=True
CACHE_TTL=3600

# Rate limiting (optional)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60